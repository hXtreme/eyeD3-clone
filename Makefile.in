SHELL:=/bin/bash
DIST_NAME=@PACKAGE_TARNAME@-@PACKAGE_VERSION@-@PACKAGE_RELEASE_LEVEL@
DIST_TAR=${DIST_NAME}.tar
DIST_GZ=${DIST_TAR}.gz
DIST_WWW=${DIST_NAME}-www.tar.gz
PYTHON=@PYTHON@

ifdef DESTDIR
  SETUP_ARGS=--root ${DESTDIR}
endif
prefix=@prefix@
exec_prefix:=@exec_prefix@
bindir:=$(subst //,/,${DESTDIR}/@bindir@)
datarootdir:=$(subst //,/,${DESTDIR}/@datarootdir@)
mandir:=$(subst //,/,${DESTDIR}/@mandir@)
datadir:=$(subst //,/,${DESTDIR}/@datadir@)
docdir:=$(subst //,/,${DESTDIR}/@datadir@/docs/${DIST_NAME})
# Redefine these
prefix:=$(subst //,/,${DESTDIR}/${prefix})
exec_prefix:=$(subst //,/,${DESTDIR}/${exec_prefix})

DOCS_BUILD_D=docs/.build

.PHONY: all
all: module

.PHONY: module
module:
	${PYTHON} setup.py build

.PHONY: install
install:
	${PYTHON} setup.py install ${SETUP_ARGS} --prefix=${prefix}

	install -m 755 -d ${bindir}
	install -m 755 bin/eyeD3 ${bindir}

	install -m 755 -d ${docdir}
	install -m 644 README ${docdir}
	install -m 644 COPYING ${docdir}
	gzip -f -9 ${docdir}/COPYING
	install -m 644 ChangeLog ${docdir}
	gzip -f -9 ${docdir}/ChangeLog

	# FIXME: conditionalize this with a USE=docs->configure var
	#install -m 755 -d ${docdir}/api

.PHONY: clean
clean:
	-rm -rf build
	find . -name \*.pyc -exec rm '{}' \;
	-rm -rf eyeD3.egg-info

.PHONY: dist-clean
dist-clean: clean test-clean
	-rm -rf autom4te*.cache ${DIST_NAME} ${DIST_GZ} ${DIST_WWW} ${DIST_WWW}
	-rm docs/eyeD3.1.gz
	-rm -f config.*
	-rm -rf src/eyed3/info.py
	-find . -name \*.pyc -exec rm '{}' \;
	-rm Makefile
	-rm tags
	-rm pylint-report.html
	-rm -rf dist

.PHONY: maintainer-clean
maintainer-clean: docs-clean
	-rm -f configure src/config.h.in
	${MAKE} dist-clean

.PHONY: dist
dist: docs dist-clean
	mkdir ${DIST_NAME}
	cp README.rst ${DIST_NAME}
	cp ChangeLog ${DIST_NAME}
	cp COPYING ${DIST_NAME}
	cp AUTHORS ${DIST_NAME}
	cp version ${DIST_NAME}
	cp configure setup.py Makefile.in ${DIST_NAME}

	mkdir ${DIST_NAME}/etc
	mkdir ${DIST_NAME}/src
	cp -r src/eyed3 ${DIST_NAME}/src
	mkdir ${DIST_NAME}/bin
	cp bin/eyeD3 ${DIST_NAME}/bin
	# FIXME
	#mkdir ${DIST_NAME}/doc

	find ${DIST_NAME} -type d -name .svn -print | xargs rm -rf
	tar cf ${DIST_TAR} ${DIST_NAME}
	gzip ${DIST_TAR}
	rm -rf ${DIST_NAME}
	./autogen.sh

.PHONY: release
release: dist www
	# Re-bootstap to undo dist-clean
	./autogen.sh > /dev/null 2>&1

.PHONY: changelog
changelog:
	hg log --style=changelog . >| ChangeLog
	   
.PHONY: tags
tags: 
	@if test -f tags; then \
	   rm tags; \
        fi
	ctags -R --exclude='tmp/*' --exclude='build/*'

.PHONY: docs
docs:
	${MAKE} -C ./docs html
	@echo "Docs: file://`pwd`/${DOCS_BUILD_D}/html/index.html"

.PHONY: docs-clean
docs-clean:
	${MAKE} -C ./docs clean

.PHONY: www
www: docs
	test -d build || mkdir build
	-rm -rf build/www
	mkdir -p build/www/eyeD3/releases/gentoo
	cp ${DIST_GZ} build/www/eyeD3/releases
	cp -r docs/.build/html/* build/www/eyeD3
	cd build && tar czvf ${DIST_WWW} www

.PHONY: push-www
push-www:
	scp build/${DIST_WWW} melvins:.
	ssh melvins 'tar xzvf ${DIST_WWW}'

.PHONY: sloccount
sloccount:
	sloccount ./src
	sloccount --cached --details ./src

.PHONY: test-dist
test-dist:
	-${MAKE} maintainer-clean
	./autogen.sh
	${MAKE} dist

	test -d ./tmp || mkdir tmp
	test -d ./tmp/install || mkdir tmp/install
	-rm -rf ./tmp/${DIST_NAME}
	-rm -rf ./tmp/install/*
	tar xzvf ${DIST_GZ} -C ./tmp

	cd ./tmp/${DIST_NAME} && ./configure --prefix=${CURDIR}/tmp/install
	${MAKE} -C ./tmp/${DIST_NAME}
	${MAKE} -C ./tmp/${DIST_NAME} install

.PHONY: test
test: all
	nosetests --verbosity=3 --detailed-errors ${NOSE_OPTS} \
	    --cover-erase --with-coverage --cover-tests --cover-inclusive --cover-package=eyed3 \
	    --cover-branches --cover-html --cover-html-dir=build/test/coverage\
	    src/test
	@echo "Coverage: file://${CURDIR}/build/test/coverage/index.html"

.PHONY: test-clean
test-clean:
	-find ./src/test -name \*.pyc -exec rm '{}' \;
	-rm -rf build/test/html
	-rm -rf .coverage
	-find . -name \*,cover -exec rm '{}' \;

PYLINT_OPTS=
.PHONY: pylint
pylint:
	pylint --rcfile=etc/pylint.conf \
	       ${PYLINT_OPTS} eyed3 > pylint-report.html
